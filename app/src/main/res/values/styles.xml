<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="textViewBody">
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

    <style name="textViewSubhead">
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <style name="textFieldPlayer">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

</resources>
