<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">sans</item>
        <item name="android:colorControlActivated">@color/color_primary</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>

    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#20000000</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="switchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
    </style>

    <style name="textViewBody">
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
    </style>

    <style name="textViewSubhead">
        <item name="android:textSize">@dimen/material_text_subhead</item>
    </style>

    <style name="textFieldPlayer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="RoboTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/material_text_body1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/color_primary_dark</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textColorPrimary">#f3f3f3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerItem">
          <item name="android:paddingLeft">24dp</item>
      </style>

  </resources>
